<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UnisoftTest.MVVM.Views.ConfigurationPage"
             Title="ConfigurationPage">
    <Grid RowDefinitions=".3*,.8*">
        <VerticalStackLayout>
            <Entry Placeholder="Nazwa skryptu" Text="{Binding NameScriptEntry, Mode=TwoWay}"/>
            <Entry Placeholder="Ścieżka do skryptu" Text="{Binding PathScriptEntry, Mode=TwoWay}"/>
            <Button Text="Add or Update"
                    Command="{Binding AddOrUpdateCommand}"/>

        </VerticalStackLayout>
        <CollectionView Grid.Row="1" ItemsSource="{Binding Scripts}" SelectedItem="{Binding CurrentScript}" SelectionMode="Single" SelectionChangedCommand="{Binding}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions=".3*,.7*">
                        <Label Text="{Binding ScriptName}"/>
                        <Label Text="{Binding ScriptPath}" 
                               Grid.Column="1"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>


    </Grid>
</ContentPage>